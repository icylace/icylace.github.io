input, textarea
  box-sizing content-box

select
  cursor      pointer
  user-select none
  &[size]
    height auto

button
input[type="button"]
input[type="image"]
input[type="reset"]
input[type="submit"]
  cursor      pointer
  user-select none
  &:disabled
    cursor not-allowed

// Change button focus outlines in Firefox.
button
input[type="button"]
input[type="file"] > input[type="button"]
input[type="reset"]
input[type="submit"]
  &::-moz-focus-inner
    border 0

// https://github.com/necolas/normalize.css/issues/319
button[disabled]
html input[disabled]
  cursor not-allowed

button, a.button, input, select, textarea
  background  color_white
  border      1px solid color_steel_blue
  font-family font_candara
  padding     layout_border_width / 2
  &:disabled
    background   color_gallery
    border-color color_silver
    color        color_silver

option:disabled
  background   color_gallery
  border-color color_silver
  color        color_silver

button, a.button, input.button, input[type="button"], input[type="reset"], input[type="submit"]
  background  color_button_bg
  border      1px solid color_button_border
  color       color_button
  font-weight normal
  padding     (layout_border_width / 2) layout_border_width
  &:hover
    color           color_button_hover
    text-decoration underline
    &:disabled
      text-decoration none
  &:active {}
  &:disabled
    background   color_gallery
    border-color color_silver
    color        color_silver
    cursor       default
    text-shadow  none

