//
// Only give a pointer cursor for labels if they're linked to a form control.
// http://davidwalsh.name/css-enhancements-user-experience#comment-9327
//
label[for]
input[type="checkbox"]
input[type="radio"]
select
  cursor pointer

fieldset
  margin                 0 0 layout_border_width
  padding                layout_border_width
  -webkit-margin-end     0
  -webkit-margin-start   0
  -webkit-padding-after  0
  -webkit-padding-before 0
  -webkit-padding-end    0
  -webkit-padding-start  0
  :last-child
    margin-bottom 0

legend
  padding               0 (layout_border_width / 2)
  -webkit-padding-start 0
  -webkit-padding-end   0

  // http://www.456bereastreet.com/archive/201210/how_to_line_wrap_text_in_legend_elements_even_in_ie/
  display     table         // Enable line-wrapping in IE8+.
  white-space normal        // Enable line-wrapping in old versions of Firefox.

