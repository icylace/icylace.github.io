body {
  //background:   transparent;
  //$bg-top-width:    1600px;
  //$bg-top-1-height: 1634px;

  //
  // Scale the default font size to make it easy to work with. Normally the
  // default is 16px so this will scale it to 10px.
  //
  // Use the golden ratio for leading.
  //

  //
  // http://www.designbastard.com/2011/04/font-size-em-vs-px/#comment-788
  //

  @include background-size(100%);

  background:   $color-body-bg $image-bg repeat fixed;
  color:        $color-body;
  font-family:  $body-font;
  font-size:    $body-font-size;
  font-weight:  300;
  line-height:  1.4;

  //
  // http://orderedlist.com/resources/html-css/thinning-text-in-webkit-safari/
  //
  //-webkit-font-smoothing: antialiased;

  -webkit-tap-highlight-color: rgba(255, 0, 0, 0.62);
}

h1, h2, h3, h4, h5, h6 {
  margin-top:     0;
  margin-bottom:  0.5em;
}

